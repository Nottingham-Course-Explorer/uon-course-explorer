<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/">
    <ShortName>UoN Courses (Nottingham)</ShortName>
    <Description>UoN Course Explorer (Nottingham)</Description>
    <InputEncoding>UTF-8</InputEncoding>
    <!-- Auto-update URL -->
    <Url
        type="application/opensearchdescription+xml"
        rel="self"
        template="https://uoncourses.org/static/opensearch.xml"
    />
    <Image width="32" height="32" type="image/x-icon">https://uoncourses.org/static/img/favicon.png</Image>
    <!-- Main search URL -->
    <Url type="text/html" template="https://uoncourses.org/?school=&amp;title={searchTerms}"/>
    <!-- Search suggestions URL -->
    <Url type="application/x-suggestions+json" template="https://uoncourses.org/opensearch-suggestions?searchTerms={searchTerms}" />
</OpenSearchDescription>
